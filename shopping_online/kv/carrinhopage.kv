<CarrinhoPage>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex("#f8f8f8")
            RoundedRectangle:
                pos: self.pos
                size: self.size[0], self.size[1] *0.9
                radius: [25, 25, 0, 0]


        ImageButtonCustom:

            pos_hint: {"x": 0.05, "top": 1}
            size_hint: 0.05, 0.05
            source: "icones/voltar.png"
            on_release: app.sair_carrinho_page() 


        Label:
            text: "Carrinho"
            pos_hint:{"center_x": 0.5, "top": 1}
            size_hint:0.5, 0.05
            color: 0, 0, 0, 1



        ScrollView:
            pos_hint: {"center_x": 0.5, "top": 0.87}
            size_hint: 0.8, 0.6
            bar_width: 0
            effect_cls : 'ScrollEffect'
            GridLayout:
                cols: 1
                id : scroll_carrinho
                padding: 0, 10
                spacing: 20 , 20
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "80dp"
                row_force_default: True



        Label:
            pos_hint: {"center_x": 0.5, "top": 0.2}
            size_hint: 1, 0.05
            id: label_total_carrinho
            text: "SubTotal: R$0"
            color : utils.get_color_from_hex("#b4b4c3")
            halign: "center"
            bold: True


        MDRaisedButton:
            id : botao_finalizar_compra
            pos_hint: {"center_x": 0.5, "top": 0.1}
            text: 'Check Out'
            md_bg_color: utils.get_color_from_hex("#9188e5")


        AsyncImage:

            id: carrinho_vazio
            pos_hint: {"center_x": 0.5, "top": 0.7}
            size_hint: 0.85, 0.55
  
            keep_ratio : False
            allow_stretch : True
            
            source: ""