<LoginPage>:


    FloatLayout:

        canvas.before:
            Color:
                rgba: utils.get_color_from_hex("#eff1f1")
            Rectangle:
                pos: self.pos
                size: self.size


        FloatLayout:
            pos_hint: {"center_x": 0.5, "top": 0.85}
            size_hint: 0.6, 0.7
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex("#ffffff")
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius : [20,]

            
            TextInput:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex("#4e3487")
                    Line:
                        width: 2
                        rectangle: (self.x, self.y, self.width, self.height)


                id : input_email
                pos_hint: {"center_x": 0.5, "top": 0.7}
                size_hint: 0.6, 0.1
                multiline : False
                foreground_color : 0, 0, 0, 0.9
                cursor_color : 0, 0, 0, 0.75
                hint_text : "Digite o e-mail."
                background_normal: ''
                background_active: ''
                background_color : 1 , 1, 1, 1
                padding: [20, 10]

                

            TextInput:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex("#4e3487")
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height

                id: input_senha
                pos_hint: {"center_x": 0.5, "top": 0.55}
                size_hint: 0.6, 0.1


                multiline: False
                foreground_color: 0, 0, 0, 0.9
                cursor_color: 0, 0, 0, 0.75
                hint_text: "Digite sua senha."
                password: True
                background_normal: ''
                background_active: ''
                padding: [20, 10]


            

            Label:
                id : mensagem_alerta
                pos_hint: {"center_x": 0.5, "top": 0.14}
                size_hint: 1, 0.1
                text: ""


            LabelButton:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex("#4e3487")
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [22]
    
                pos_hint: {"center_x": 0.5, "top": 0.4}
                size_hint: 0.65, 0.1
                text: "Fazer login"
                bold : True
                on_release: app.myfirebase.fazer_login(input_email.text, input_senha.text)
                
            
    	    LabelButton:

                pos_hint: {"center_x": 0.5, "top": 0.3}
                size_hint: 0.35, 0.15
                text: "NÃ£o tem uma conta? Click aqui"
                bold : True
                on_release: app.mudar_tela("criarcontapage")
                color: utils.get_color_from_hex("#4e3487")
            

