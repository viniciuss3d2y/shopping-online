<ProdutosCategoriaPage>:
    FloatLayout:

        ImageButtonCustom:

            pos_hint: {"x": 0.05, "top": 1}
            size_hint: 0.05, 0.05
            source: "icones/voltar.png"
            on_release: app.mudar_tela("homepage")  
    

    
        MDScrollView:
            pos_hint: {"center_x": 0.5, "top": 0.7}
            size_hint: 0.8, 0.7
            bar_width: 0
            effect_cls : 'ScrollEffect'
            GridLayout:
                cols: 2
                id : scroll_produtos
                spacing: 20 , 20
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "200dp"
                row_force_default: True