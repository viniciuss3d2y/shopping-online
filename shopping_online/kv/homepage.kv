

<HomePage>:



    FloatLayout:
        id : conteiner_principal

        ScrollView:
            pos_hint: {"right": 1, "top": 0.5}
            size_hint: (1, 0.4)
            bar_width: 0 # Oculta a barra de rolagem
            effect_cls: 'ScrollEffect'
            
            GridLayout:
                id: scroll_roupas
                
                rows: 1
                spacing: 20
                padding : 20
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "130dp"
                col_force_default: True
                
                # Habilita a rolagem horizontal  
                do_scroll_y: False  # Mantém a rolagem vertical desativada
                do_scroll_x: True
                # Ajustes de rolagem
                scroll_wheel_distance: 50  # Ajusta a distância da rolagem
                scroll_timeout: 0  # Para que a rolagem não retorne automaticamente

        


    # scroll selecionar clientes
        ScrollView:
            pos_hint: {"right": 1, "top": 0.67}
            size_hint: 1, 0.15
            bar_width: 0
            effect_cls : 'ScrollEffect'
            GridLayout:
                id: scroll_cartegoria
                rows : 1
                spacing: 2
                #padding : 10
                size_hint_x: None
                width: self.minimum_width
                col_default_width: "75dp"
                col_force_default: True
                
        LabelCustom:
            size_hint: 1, 0.05
            text: "Comprar Por Categoria"
            font_size: '11sp'
            color: utils.get_color_from_hex("#0a0b0f")
            posicao_y: 0.68
            font_name : "sanchez/Sanchezregular.otf"

        LabelCustom:
            text: "Selecionado Para Você"
            #size_hint: 1, 0.05
            color: utils.get_color_from_hex("#0a0b0f")
            font_size: '10sp'
            posicao_y: 0.49
            font_name : "sanchez/Sanchezregular.otf"


        LabelButtonCustom:
            text: "Ver Todos"
            color: utils.get_color_from_hex("#a0a5ab")
            posicao_y: 0.49
            #posicao_x : 100
            font_size: '10sp'
            font_name : "sanchez/Sanchezregular.otf"



        FloatLayout:
            id: float_banners
            pos_hint : {"center_x": 0.5, "top": 0.8}
            size_hint : 1, 0.2

        Image:
            pos_hint : {"x": 0.01, "top": 1}
            size_hint : 0.16, 0.05
            source: "icones/logo.png"

