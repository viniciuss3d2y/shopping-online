<SearchPage>:
    FloatLayout:
        id : conteiner_principal

        ImageButtonCustom:

            pos_hint: {"x": 0.05, "top": 0.95}
            size_hint: 0.05, 0.05
            source: "icones/voltar.png"
            on_release: app.mudar_tela("homepage")  

        MDTextField:
            id : search_text_field

            hint_text: "search"
            pos_hint: {"x":0.2, "top": 1}
            size_hint: 0.7, 0.1

            icon_left: "magnify"
            mode: "rectangle"
            line_color_normal: utils.get_color_from_hex("#a0a5ab")
            line_color_focus: utils.get_color_from_hex("#a0a5ab")
            text_color_focus: utils.get_color_from_hex("#a0a5ab")
            icon_left_color_focus: utils.get_color_from_hex("#a0a5ab")
            hint_text_color_focus : utils.get_color_from_hex("#a0a5ab")

            helper_text: "Digite o nome do produto..."
            helper_text_mode:"persistent"

            max_text_length: 50

            font_size: '12sp'


                
        MDScrollViewStretch:
            pos_hint: {"center_x": 0.5, "top": 0.75}
            size_hint: 0.8, 0.6
            bar_width: 0
            #effect_cls : 'ScrollEffect'
            GridLayout:
                cols: 2
                id : scroll_produtos
                spacing: 20 , 20
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "200dp"
                row_force_default: True

        
        AsyncImage:

            id: conteiner_cor_nao_encontrada
            pos_hint: {"center_x": 0.5, "top": 0.7}
            size_hint: 0.85, 0.55
  
            keep_ratio : False
            allow_stretch : True
            
            source: ""
        



    # scroll selecionar clientes
        MDScrollView:

            pos_hint: {"center_x": 0.5, "top": 0.86}
            size_hint: 0.9, 0.1
            bar_width: 0
            effect_cls : 'ScrollEffect'
            MDGridLayout:

                id: scroll_cartegoria
                rows : 1
                spacing: 10

                # filtrar por cor
                MDDropDownItem:
                    id: drop_down_item_cores
                    text: 'Cor'
                    on_release: app.add_cores_disponiveis()


                # filtrar por tamanho
                MDDropDownItem:
                    id: drop_down_item_tamanhos
                    text: 'tamanho'
                    on_release: app.add_tamanhos_disponiveis()

                # filtrar por preco
                MDDropDownItem:
                    id: drop_down_item_precos
                    text: 'pre√ßo'
                    on_release: app.slider_filtrar_preco()



